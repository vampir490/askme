<div class="container content-wrapper buffer-both">
  <h1 class="title-medium">Edit profile</h1>

  <div class="column-1-2">
    <%= form_for(@user) do |f| %>
      <%# Вывод ошибок валидации пользователя, если есть.
      <% if @user.errors.any? %>
      <div class="form-errors">
        <ul>
          <% for message in @user.errors.full_messages %>
            <li class="form-error-message"><%= message %></li>
          <% end %>
        </ul>
      </div>

      <div class="form-field">
        <%= f.label :username, class: 'form-label' %>
        <%= f.text_field :username, class: 'form-text-field' %>
      </div>

      <div class="form-field">
        <%= f.label 'Name', class: 'form-label' %>
        <%= f.text_field :name, class: 'form-text-field' %>
      </div>

      <div class="form-field">
        <%= f.label 'URL of your avatar', class: 'form-label' %>
        <%= f.text_field :avatar_url, class: 'form-text-field' %>
      </div>

      <div class="buffer-top-large buffer-bottom">
        Do not want to change password? Keep this field blank!
      </div>

      <div class="form-field">
        <%= f.label :password, class: 'form-label' %>
        <%= f.password_field :password, class: 'form-text-field' %>
      </div>

      <div class="form-field">
        <%= f.label :password_confirmation, class: 'form-label' %>
        <%= f.password_field :password_confirmation, class: 'form-text-field' %>
      </div>

      <div class="form-field">
        <%= f.label 'Background for avatar block', class: 'form-label' %>
        <%= f.color_field :background_color %>
      </div>

      <div class="form-action buffer-top">
        <%= f.submit 'Save', class: 'button button-dark button-small' %>
      </div>
    <% end %>
  </div>
  <div class="column-1-4-right">
    <%= link_to 'Delete user', user_path, method: :delete,
                data: {confirm: 'Are you sure you want to delete your account?'},
                class: 'button button-red button-small' %>
  </div>
</div>